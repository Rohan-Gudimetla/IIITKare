#:kivy 2.2.0
#:import get_color_from_hex kivy.utils.get_color_from_hex
#:import Gradient kivy_gradient.Gradient
<Button>:       #parent button: applies to all the other buttons
    font_size:20
    size_hint: 0.3, 0.05
    background_color: 0.1, 0.5, 0.6, 1

<MDTextField>:
    font_size: "100dp"
    size_hint: 0.4, 0.07

<login_window>:
    name: "login"
    FloatLayout:
        canvas.before:
            Color:
                rgba:(1, 1, 1, 1)
            Rectangle:
                pos: self.pos
                size: self.size
                texture: Gradient.vertical(get_color_from_hex("b7f582"),get_color_from_hex("b4fa78"),get_color_from_hex("afff6b"),get_color_from_hex("afff6b"),get_color_from_hex("afff6b"),get_color_from_hex("88fa28"), get_color_from_hex("7dfa14"), get_color_from_hex("75fa05"), get_color_from_hex("6feb02"), get_color_from_hex("62cf02"), get_color_from_hex("56b502"), get_color_from_hex("479403"))

        MDCard:
            id: logincard
            pos_hint:{"center_x": .5, "top": .6}
            color: "grey"
            size_hint: .8, .5
            opacity: .3
        MDTextField:
            id: mail
            hint_text: "example@iiitkottayam.ac.in"
            text: ""
            required : True
            
            font_color: "red"
            color_mode: 'custom'
            helper_text: "College MailID"
            helper_text_mode: "on_focus"
            line_color_focus: get_color_from_hex('8a048c')
            font_color: "black"
            size_hint: .7, .1
            pos_hint:{"center_x": 0.5,"top":0.5}
        
        MDTextField:
            id: passw
            hint_text: "Enter your Password"
            text: ""
            password: True
            required: True
            size_hint: .7, .1 
            
            pos_hint:{"center_x": 0.5,"top":0.35}
        MDFillRoundFlatButton:
            pos_hint:{"center_x": 0.5,"top":0.2}
            size_hint: .5, .07
            id: btn
            text: "Login"
            md_bg_color: get_color_from_hex("a1124b")
            on_press: self.md_bg_color = get_color_from_hex("133261")
            on_release: app.userLogin()

        Image:
            source: 'logo1.png'
            pos_hint: {'center_x': 0.5, 'top': 0.997}
            size_hint: .46, .46